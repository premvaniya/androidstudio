<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/simplebg">

    <!-- Scrollable Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="20dp">

        <!-- Parent container for all sections -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- First Container: Header Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/rounded_corners"
                android:elevation="4dp"
                android:padding="16dp"
                android:layout_marginBottom="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Onboarding Application âœˆ"
                    android:textStyle="bold|italic"
                    android:textSize="36dp"
                    android:textColor="#000000"
                    android:gravity="center"
                    android:layout_marginBottom="16dp" />
            </LinearLayout>

            <!-- Spacer between Header and Registration Form -->
            <View
                android:layout_width="match_parent"
                android:layout_height="20dp" />

            <!-- Second Container: Registration Form Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/rounded_corners"
                android:elevation="4dp"
                android:padding="16dp">

                <!-- Register Section Header -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="REGISTER YOURSELF"
                    android:textStyle="bold"
                    android:textSize="24sp"
                    android:textColor="#000000"
                    android:gravity="center"
                    android:layout_marginBottom="16dp" />

                <!-- Name Field -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="NAME:"
                    android:textSize="20sp"
                    android:textColor="#000000"
                    android:layout_marginBottom="8dp" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Enter Your Name"
                    android:textSize="16sp"
                    android:textColor="#000000"
                    android:background="@drawable/edittext_background_states"
                    android:padding="12dp"
                    android:gravity="center"
                    android:layout_marginBottom="16dp" />

                <!-- Email Field -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="EMAIL:"
                    android:textSize="20sp"
                    android:textColor="#000000"
                    android:layout_marginBottom="8dp" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Enter Email Address"
                    android:textSize="16sp"
                    android:textColor="#000000"
                    android:background="@drawable/edittext_background_states"
                    android:padding="12dp"
                    android:gravity="center"
                    android:layout_marginBottom="16dp" />

                <!-- Gender Selection -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="GENDER:"
                    android:textSize="20sp"
                    android:textColor="#000000"
                    android:layout_marginBottom="8dp" />

                <RadioGroup
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="16dp">

                    <RadioButton
                        android:id="@+id/radio_male"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Male"
                        android:background="@drawable/custom_button_selector"
                        android:gravity="center"
                        android:padding="12dp"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        android:layout_marginRight="16dp" />

                    <RadioButton
                        android:id="@+id/radio_female"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Female"
                        android:background="@drawable/custom_button_selector"
                        android:gravity="center"
                        android:padding="12dp"
                        android:textColor="@color/black"
                        android:textSize="16sp" />
                </RadioGroup>

                <!-- Date of Birth Section with Spinner-style DatePicker -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="DATE OF BIRTH:"
                    android:textSize="20sp"
                    android:textColor="#000000"
                    android:layout_marginBottom="8dp" />

                <DatePicker
                    android:id="@+id/datePicker"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:calendarViewShown="false"
                    android:spinnersShown="true"
                    android:elevation="6dp"
                    android:layout_marginBottom="16dp" />

                <!-- Plane Type Switch -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="PLANE TYPE:"
                    android:textSize="20sp"
                    android:textColor="#000000"
                    android:layout_marginBottom="8dp" />

                <Switch
                    android:id="@+id/switchPlane"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Commercial"
                    android:layout_marginBottom="16dp"
                    android:thumb="@drawable/custom_switch_thumb"
                    android:track="@drawable/custom_switch_track" />

                <!-- Terms and Conditions Checkbox -->
                <CheckBox
                    android:id="@+id/checkbox_terms"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="I agree to the Terms and Conditions"
                    android:textSize="16sp"
                    android:textColor="#000000"
                    android:layout_marginTop="16dp" />

                <!-- Submit Button -->
                <Button
                    android:id="@+id/submitButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Submit"
                    android:textSize="18sp"
                    android:textColor="#111111"
                    android:backgroundTint="#EEEE8A"
                    android:elevation="6dp"
                    android:padding="12dp"
                    android:layout_marginTop="20dp" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>